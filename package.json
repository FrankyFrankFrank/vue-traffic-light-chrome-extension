{
  "name": "vue-traffic-light-chrome-extension",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "build-watch": "vue-cli-service build-watch --mode development",
    "build-extension": "yarn build && cp src/manifest.production.json dist/manifest.json && cp src/entry/content.js dist/"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^1.6.1",
    "firebase": "^9.8.1",
    "pinia": "^2.0.14",
    "uuid": "^8.3.2",
    "vite": "^2.5.4",
    "vue": "^3.2.13"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "eslint": "8",
    "eslint-plugin-vue": "8",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.0.24",
    "vue-eslint-parser": "^9.0.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2021": true,
      "webextensions": true
    },
    "extends": [
      "plugin:vue/base",
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "rules": {
      "vue/multi-word-component-names": 0
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
