{
    "manifest_version": 3,
    "name": "team-traffic-lights",
    "description": "Allows teams to share and update their traffic light status throughout the day",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "permissions": ["storage", "notifications"]
}